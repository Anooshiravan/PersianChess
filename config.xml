<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id          = "com.persianchess.www"
        versionCode = "135" 
        version     = "1.3.5" >

    <!-- versionCode is optional and Android only -->

    <name>Persian Chess</name>

    <platform name="android">
              <icon src="res/android/ldpi.png" density="ldpi" />
              <icon src="res/android/mdpi.png" density="mdpi" />
              <icon src="res/android/hdpi.png" density="hdpi" />
              <icon src="res/android/xhdpi.png" density="xhdpi" />
    </platform>

    <icon src="img/logo.png" />

    <description>
        Chess variant: Persian Chess 
    </description>

    <author href="https://www.persianchess.com" email="aahmadi@schubergphilis.com">
        Anooshiravan Ahmadi
    </author>

    <gap:platform name="android" />
    
    <gap:config-file platform="android" parent="/manifest" mode="add">
        <uses-feature android:name="android.hardware.telephony" android:required="false" />
        <uses-feature android:name="android.hardware.camera" android:required="false" />
        <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    </gap:config-file>

    <access origin="*" browserOnly="true"/>
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="com.rjfun.cordova.plugin.lowlatencyaudio"/>

    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature>

    <preference name="android-minSdkVersion" value="11" />
    <preference name="permissions" value="none"/>
</widget>